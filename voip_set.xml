<?xml version='1.0' encoding='UTF-8'?>
<topologies>
<topology name='voip-set' topologyBuilder='LinearDRPCTopologyBuilder'>
 <nodes>
   <node name='json2map' order='0' parallelism='1' factory='mxpush.bolts.factories.Json2MapBoltSetTopoFactory'>
      <properties>
          <property name='key' value='src' />
          <property name='translator'>
              <contents>
                  <element value='src'/>
                  <element value='dst'/>
                  <element value='sid'/>
              </contents>
          </property>
      </properties>
   </node>
   <node name='nameMapper' order='1' parallelism='1' factory='mxpush.bolts.factories.MapNameMapperBoltFactory'>
      <properties>
          <property name='idx' value='1'/>
          <property name='idxErr' value='1'/>
          <!--property name='getValueByIndex' value='false'/>
          <property name='fieldName' value='notification'/>
          <property name='inDrpc' value='true'/>
          <property name='extractField' value='true'/>
          <property name='extractFieldName' value='src'/-->
          <property name='mappings'>
            <contents>
                 <!--element name='src' value='src' />
                 <element name='dst' value='dst' /-->
                 <element name='unseenMissedCall' value='voip_unseenmissedcall' />
                 <element name='nbMissedCall'     value='voip_nbmissedcall'     />
                 <element name='nextUid'          value='voip_nextuid'          />
                 <element name='nbVoiceMsg'       value='voip_nbvoicemsg'       />
                 <element name='nbFaxMsg'         value='voip_nbfaxmsg'         />
                 <element name='unseenFaxMsg'     value='voip_unseenfaxmsg'     />
                 <element name='unseenVoiceMsg'   value='voip_unseenvoicemsg'   />
                 <!--
                 <element name='voip_umtimestamp'      value='uMTimestamp'     />
                 <element name='VOICE'   value='voice'/>
                 <element name='VERSION' value='version'/>
                 <element name='FORMAT'  value='format' />
                 <element name='COUNTRY' value='country'/>
                 <element name='REQUEST' value='request'/>-->
            </contents>
          </property>
      </properties>
   </node>
   <node name='setBolt' order='2' parallelism='1' factory='mxpush.bolts.factories.SharedCassandraAccessBoltFactory'>
      <properties>
          <property name='idx' value='1'/>
          <property name='idxErr' value='1'/>
          <property name='keyspace' value='push_dev'/>
          <property name='table' value='shared_subs'/>
          <property name='requestconfig'>
            <contents>
                <element name='mode' value='update'/>
                 <element name='requestparams'>
                  <contents>
                      <element name='voip_nextuid' value='integer'/>
                      <element name='voip_unseenvoicemsg' value='integer'/>
                      <element name='voip_nbvoicemsg' value='integer'/>
                      <element name='voip_unseenmissedcall' value='integer'/>
                      <element name='voip_nbmissedcall' value='integer'/>
                      <!--<element name='last' value='timestamp'/>-->
                  </contents>
                 </element>
                 <element name='requestconditions' value=''>
                  <contents>
                      <element name='src' value='string'/>
                      <element name='dst' value='string'/>
                      <element name='sid' value='string'/>
                  </contents>
                 </element>
            </contents>
          </property>
      </properties>
   </node>
   <node name='todrpc' order='3' parallelism='1' factory='mxpush.bolts.factories.ToDrpcResultBoltFactory'>
      <properties>
          <property name='idx' value='3'/>
          <property name='idxErr'  value='1'/>
      </properties>
   </node>
 </nodes>
 <streams>
   <stream node='json2map'>
     <fields>id args src</fields>
   </stream>
   <stream node='nameMapper'>
     <fields>id args src</fields>
   </stream>
   <stream node='setBolt'>
     <fields>id args src result</fields>
   </stream>
 </streams>
 <connections>
   <node name='setBolt' order='1'>
      <groupings><grouping name='fieldsGrouping'>
      <fields>src</fields>
      </grouping></groupings>
   </node>
   <node name='nameMapper' order='1'>
      <groupings><grouping name='fieldsGrouping'>
      <fields>src</fields>
      </grouping></groupings>
   </node>
   <node name='todrpc' order='3'>
      <groupings><grouping name='shuffleGrouping'></grouping></groupings>
   </node>
 </connections>
</topology>
</topologies>

